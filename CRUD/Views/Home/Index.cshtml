@{
    ViewBag.Title = "Home Page";
}
<style>
    .clsRed {
        border: 1px solid red;
    }

    .clsMarginTop {
        margin-top: 15px;
    }

    .clsTop {
        margin-top: 19px;
        margin-bottom: 15px;
    }
</style>
<div class="row clsTop">
    <div class="col-md-12" style="text-align:right;">
        <button type="button" class="btn btn-primary" id="btnAddStudent"><i class="fas fa-plus"></i> Add Student</button>
    </div>
</div>
<div class="row">
    <div class="table-responsive">
        <table id="tblStudent" class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone No.</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade" id="mdlStudent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Student Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <input type="hidden" id="hdnId" />
                    <div class="col-md-4">
                        <label>Name:</label>
                        <input type="text" class="form-control" placeholder="Enter Name" id="txtName" />
                    </div>
                    <div class="col-md-4">
                        <label>Email:</label>
                        <input type="text" class="form-control" placeholder="Enter Email" id="txtEmail" />
                    </div>
                    <div class="col-md-4">
                        <label>Phone No:</label>
                        <input type="text" class="form-control OnlyNumbers" placeholder="Enter No" id="txtNo" maxlength="10" />
                    </div>
                </div>
                <div class="row clsMarginTop">

                    <div class="col-md-3">
                        <label>State:</label>
                        <select id="drpState" class="form-control">
                            <option value="">Select State</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label>City:</label>
                        <select id="drpCity" class="form-control">
                            <option value="">Select City</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label>Address:</label>
                        <textarea class="form-control" id="txtAddress" rows="1" cols="10" placeholder="Enter Address"></textarea>
                    </div>
                </div>
                <div class="row clsMarginTop">
                    <div class="form-check text-center">
                        <input class="form-check-input" type="checkbox" value="" id="chkAgress">
                        <label class="form-check-label" for="chkAgress">
                            Is Agree
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSave" disabled>Save </button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/Student/Student.js"></script>
}